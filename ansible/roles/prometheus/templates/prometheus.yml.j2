# {{ ansible_managed }}
global:
  scrape_interval: 15s

# Note: indri system metrics are pushed via Alloy remote_write
# Sifaka still uses traditional scraping via node_exporter

scrape_configs:
  - job_name: "node-exporter-sifaka"
    static_configs:
    - targets: ["sifaka:9100"]

  - job_name: "loki"
    static_configs:
    - targets: ["localhost:3100"]
